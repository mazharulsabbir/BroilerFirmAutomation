<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="User Info">

        <EditTextPreference
            app:key="username"
            app:title="Full Name"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="email_address"
            app:title="@string/email_address"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="request_password_change"
            app:summary="An password change instruction will be sent to your email."
            app:title="Change Password" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="Sync Temperature &amp; Humidity" />

        <ListPreference
            app:dependency="sync"
            app:entries="@array/sync_entries"
            app:entryValues="@array/sync_values"
            app:key="sync_time"
            app:title="Sync in every"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>